<div class="container">

    <div class="page-header">
        <h1>{{posting.organization.username}}</h1>
        <p class="lead"> </p>
    </div>

    <h3>{{posting.title}}</h3>
    <hr>
    <p>
        {{posting.description}}

    </p>
    <h3>Certifications</h3>
    <hr>
