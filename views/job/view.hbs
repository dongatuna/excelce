    {{#if update}}
    <h3>{{contacts}} Respondents</h3>
        {{#each posting.respondents}}
            <strong>{{this.respondents.username}}</strong>
            <p>{{this.description}}</p>
            {{# each this.certifications}}
                <ul display="inline">
                    <li >{{this}}</li>
                </ul>
            {{/each}}
        {{/each}}
    {{/if}}

    <hr>

    <i class="fa fa-download" aria-hidden="true"></i> Download Job Flyer
    {{#if update}}
        <button type="submit" class="btn btn-primary">Continue</button>
        <a href="/job/update/{{posting._id}}">Edit Job Post</a>
    {{/if}}


    <hr>

</div>