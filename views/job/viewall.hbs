<div class="spacer">
    <a href="../application/create" class="btn btn-danger pull-right" role="button">Create Resume/CV</a>

</div>

{{# each postings}}
    <div class="row">

        {{!-- {{#each this}} --}}
        <div class="list-group application">
            <h4 class="list-group-item-heading">{{this.title}}</h4>
            <hr>
            <p class="list-group-item-text"><strong>Description:</strong>{{this.truncated_description}}</p>

            <p><strong>Required Certifications:</strong><em>{{this.requirements}} </em></p>

            <a class="more" href="{{this._id}}">See more</a>
        </div>
        {{!-- {{/each}} --}}

    </div>
{{/each}}