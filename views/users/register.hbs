<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>Sign Up</h2>
        {{#if hasErrors}}
           <div class="alert alert-danger">
               {{#each messages}}
                   <p>{{this}}</p>
               {{/each}}
           </div>
        {{/if}}
        <form action="{{postUrl}}" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter email address">
            </div>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter email address">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter password">
            </div>

            <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm password">
            </div>
            <input type="hidden" name="role" id="role" value="{{type}}" >
            <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}" >

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>