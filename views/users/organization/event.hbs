<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>Post|Share an Event About Alzheimer's, Long Term Care</h2>
        Validation Errors for find caregivers form
        <form action="/users/organization/job" method="post">
            <div class="form-group">
                <label for="name">Presenter</label>
                <input type="text" id="name" name="presenter" class="form-control" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="title">Topic</label>
                <input type="text" id="title" name="title" class="form-control" placeholder="Enter Job Title">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" rows = "20">Enter Event Description Here</textarea>
            </div>

            <!--include days and times-->

            <div class="form-group">
                <label for="attachment">Attach Flyer</label>
                <input type="file" id="attachment" name="attachment" class="form-control">
            </div>

            <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}" >

            <button type="submit" class="btn btn-primary">Post Event</button>
        </form>
    </div>
</div>