<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <h1>Choose Your Alert Notifications</h1>

        {{#if hasErrors}}
           <div class="alert alert-danger">
               {{#each messages}}
                   <p>{{this}}</p>
               {{/each}}
           </div>
        {{/if}}

    <form action="/users/notification" method="post" id="checkout-form">
         <div class="row">
             <div class="col-xs-12">
                 <div class="form-group">
                     <label for="name">Phone Number: </label>
                     <input type="tel" id="tel" class="form-control" required name="tel" value="{{ notification.tel }}">
                </div>


            <hr>
                <div class="notification-types">
                    <label class="checkbox-inline">
                        <input type="checkbox" name="phone" {{#if notification.phone}}checked{{/if}}> Phone Call
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" name="sms" {{#if notification.sms}}checked{{/if}}> SMS/Text Message
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" name="email" {{#if notification.email}}checked{{/if}}> Email
                    </label>
                </div>
             </div>
         </div>
                <button type="submit" class="btn btn-success">Save</button>
    <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}" >
    </form>


</div>
</div>