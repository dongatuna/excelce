<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <h1>Choose Your Alert Notifications</h1>


    <form action="/notifications" method="post" id="checkout-form">
         <div class="row">
             <div class="col-xs-12">
                 <div class="form-group">
                     <label for="name">Phone Number: </label>
                     <input type="tel" id="tel" class="form-control" required name="tel">
                </div>


            <hr>
                <div class="notification-types">
                    <label class="checkbox-inline">
                        <input type="checkbox" name ="phone" class="" id="inlineCheckbox1" value="phone"> Phone Call
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" name ="email" class="" id="inlineCheckbox2" value="email"> Email
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" name ="text" class="" id="inlineCheckbox3" value="text"> SMS/Text Message
                    </label>
                </div>
             </div>
         </div>
                <button type="submit" class="btn btn-success">Save</button>
    </form>


</div>
</div>