<h1>{{{user.username}}} Profile</h1>

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>

<div class="row">
    <div class ="col-md-8 col-md-offset-2">
        <div class="list-group">
            <button type="button" class="list-group-item"><a href="/users/notifications">Set Your Alert Notifications</a> </button>
            <button type="button" class="list-group-item"><a href="/application/viewall">Find Caregivers</a> </button>
            <button type="button" class="list-group-item">Your Job Opening Postings</button>
            <button type="button" class="list-group-item">Keep Your Employee's CEs current</button>
            <button type="button" class="list-group-item">Sponsor a Caregiver Training</button>
            <button type="button" class="list-group-item">Buy Credits </button>
        </div>
    </div>
</div>

<div class="row">
    <div class ="col-md-8 col-md-offset-2">
        <h3>My Orders</h3>
        <hr>

        {{# each orders}}

            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items}}
                            <li class="list-group-item">
                                <span class="badge">{{this.price}}</span>
                                {{this.item.title}}| {{this.qty}}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{this.cart.totalPrice}}</strong></div>
            </div>
        {{/each}}
    </div>
</div>
